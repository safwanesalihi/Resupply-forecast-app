# Example environment variables for backend
# Copy this file to .env and fill in your actual values

# Database Configuration (adjust for your setup)
# Example for local PostgreSQL running directly:
# DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/stock_management
# Example for Docker Compose setup (uses service name 'db'):
DATABASE_URL=postgresql://postgres:password@db:5432/stock_management

# FastAPI/Uvicorn
# HOST=0.0.0.0
# PORT=8000

# Security
# Generate a strong secret key (e.g., using `openssl rand -hex 32`)
SECRET_KEY=your-super-secret-and-long-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60 # Adjust token expiry time as needed

# Microsoft Dynamics 365 Business Central API Credentials
# Replace with your actual Dynamics BC application registration details
DYNAMICS_BC_BASE_URL=https://api.businesscentral.dynamics.com
DYNAMICS_BC_COMPANY_ID=your-dynamics-company-guid
DYNAMICS_BC_ENVIRONMENT=Production # Or Sandbox, etc.
DYNAMICS_BC_CLIENT_ID=your-azure-app-client-id
DYNAMICS_BC_CLIENT_SECRET=your-azure-app-client-secret
DYNAMICS_BC_TENANT_ID=your-azure-ad-tenant-id

# Optional: LLM API Key for enhanced forecasting
# OPENAI_API_KEY=your-openai-api-key

